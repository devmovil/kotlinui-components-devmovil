<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_fragment_dialogs"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mid_margin"
            android:layout_marginRight="@dimen/mid_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_dialog_simple_one"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_card_design"
                android:layout_margin="@dimen/small_margin"
                style="@style/DialogCardView"
                app:cardBackgroundColor="@color/blue_grey_500"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Design_Dialog_Text"
                    android:gravity="center"
                    android:text="SIMPLE ONE"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_dialog_simple_two"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_card_design"
                android:layout_margin="@dimen/small_margin"
                style="@style/DialogCardView"
                app:cardBackgroundColor="@color/indigo_500"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Design_Dialog_Text"
                    android:gravity="center"
                    android:text="SIMPLE TWO"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_dialog_single_choice"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_card_design"
                android:layout_margin="@dimen/small_margin"
                style="@style/DialogCardView"
                app:cardBackgroundColor="@color/amber_500"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Design_Dialog_Text"
                    android:gravity="center"
                    android:text="SINGLE CHOICE"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_dialog_multi_choice"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_card_design"
                android:layout_margin="@dimen/small_margin"
                style="@style/DialogCardView"
                app:cardBackgroundColor="@color/brown_500"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Design_Dialog_Text"
                    android:gravity="center"
                    android:text="MULTI CHOICE"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_dialog_date_picker"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_card_design"
                android:layout_margin="@dimen/small_margin"
                style="@style/DialogCardView"
                app:cardBackgroundColor="@color/deep_purple_500"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Design_Dialog_Text"
                    android:gravity="center"
                    android:text="DATE PICKER"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_dialog_time_picker"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_card_design"
                android:layout_margin="@dimen/small_margin"
                style="@style/DialogCardView"
                app:cardBackgroundColor="@color/blue_500"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Design_Dialog_Text"
                    android:gravity="center"
                    android:text="TIME PICKER"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_dialog_progress"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_card_design"
                android:layout_margin="@dimen/small_margin"
                style="@style/DialogCardView"
                app:cardBackgroundColor="@color/teal_500"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Design_Dialog_Text"
                    android:gravity="center"
                    android:text="PROGRESS"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_bottom_sheet"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_card_design"
                android:layout_margin="@dimen/small_margin"
                style="@style/DialogCardView"
                app:cardBackgroundColor="@color/green_500"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Design_Dialog_Text"
                    android:gravity="center"
                    android:text="BOTTOM SHEET"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ly_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
