<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MaterialAppTheme"
    android:background="@color/colorPrimary"
    android:padding="@dimen/large_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:text="Click to show a Notification"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_simple_notification"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:textColor="@color/colorWhite"
        app:strokeColor="@color/colorAccentRed"
        android:text="Simple Notification"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_big_notification"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mid_margin"
        android:textColor="@color/colorWhite"
        app:strokeColor="@color/colorAccentRed"
        android:text="Big Notification"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_action_notification"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mid_margin"
        android:textColor="@color/colorWhite"
        app:strokeColor="@color/colorAccentRed"
        android:text="WITH ACTION"/>
</LinearLayout>